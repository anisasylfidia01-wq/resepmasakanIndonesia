<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal"
    android:background="#F9F9F7">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Resep Masakan"
        android:textColor="#D4A017"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <EditText
        android:id="@+id/etCariResep"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint="Masukkan nama resep (ex: Soto Betawi)"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnCari"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="Cari Sekarang"
        android:backgroundTint="#D4A017"
        android:textColor="#FFFFFF" />

</LinearLayout>